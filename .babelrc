{ 
  "presets": [ 
    [
      "env",
      {
        "targets": {
          "chrome": 52,
          "browsers": [
            "iOS >= 7",
            "Android >= 4.4"
          ]
        },
        "modules": false,
        "useBuiltIns": true
      }
    ],
    "es2015" , 
    "react",
    "stage-2"
  ],
  "plugins": [
    [
      "react-css-modules-modify",
      {
        "filetypes": {
          ".scss": {
            "syntax": "postcss-scss"
          }
        },
        "generateScopedName":"[name]__[local]___[hash:base64:5]"
      }
    ]
  ]
}
